
public class Television {

	private int volume;
	private int canal;
	
	public Television(int volume,int canal) {
		this.volume=volume;
		this.canal=canal;
		
	}
	//getters e setters
	public int getVolume() {
		return volume;
	}
	
	public void setVolume(int volume) {
		this.volume=volume;
	}
	
	//getters e setters
	public int getCanal() {
		return canal;
	}
	
	public void setCanal(int canal) {
		this.canal=canal;
	}
	
	//metodo para aumentar o Volume
	public int aumentaVolume(int vol) {
		return volume=volume+vol;
	}
	//metodo para diminuir o Volume
	public int diminuiVolume(int vol) {
		return volume=volume=vol;
	}
	//metodo para selecionar Canal
	public int selecionarCanal(int can) {
		return canal=can;
	}
	//metodo para aumentar o Canal
	public int aumentarCanal(int can) {
		return canal=canal+can;
	}
}
